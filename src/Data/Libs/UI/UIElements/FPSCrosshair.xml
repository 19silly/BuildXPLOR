<UIElements name="Crosshair">

  <UIElement name="FPS_Crosshair">
  
	<Gfx file="UI/Visor_HUD/assets/SWF/FPSVisor_Crosshair.swf">
		<Constraints>
			<Align mode="dynamic" valign="center" halign="center" scale="1" max="0" />
		</Constraints>
	</Gfx>
	
	<functions>
		<function name="setCrosshairType" funcname="setCrosshairType" desc="Sets the crosshair type">
			<param name="type" type="string" desc="The crosshair type" />
		</function>
		
		<function name="showCrosshair" funcname="showCrosshair" desc="Sets the visiblity of the crosshair">
			<param name="bVisible" type="bool" desc="Visibility" />
		</function>
		
		<function name="setCrosshairColor" funcName="setCrosshairColor" desc="Sets the color of the crosshair">
			<param name="red" type="int" desc="Red" />
			<param name="green" type="int" desc="Green" />
			<param name="blue" type="int" desc="Blue" />
		</function>
		
		<function name="setCrosshairAlpha" funcName="setCrosshairAlpha" desc="Sets the crosshair alpha">
			<param name="fAlpha" type="float" desc="Alpha" />
		</function>
	</functions>
	
  </UIElement>
  
</UIElements>