<!-- Swaps yaw and roll -->
<ActionMaps version="1" >
	<CustomisationUIHeader device="joystick" label="JoystickXRoll" description="@ui_JoystickXRollDesc" image="JoystickXRoll" />

 	<actionmap name="spaceship_movement">
		<action name="v_yaw">
			<rebind device="joystick" input="js1_rotz" />
		</action>		
		<action name="v_roll">
			<rebind device="joystick" input="js1_x" />
		</action>		
		<action name="v_decoupled_yaw">
			<rebind device="joystick" input="js1_rotz" />
		</action>		
		<action name="v_decoupled_roll">
			<rebind device="joystick" input="js1_x" />
		</action>		
	</actionmap>
</ActionMaps>
