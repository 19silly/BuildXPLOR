<!-- Logitech G940 HOTAS + FOP mapping -->
<!-- Please install latest device drivers and calibrate -->
<ActionMaps version="1" >
	<CustomisationUIHeader label="JoystickLogitechG940" description="@ui_JoystickLogitechG940Desc" image="JoystickLogitechG940">
		<Devices>
			<joystick instance="1" />
			<joystick instance="2" />
			<joystick instance="3" />
		</Devices>
	</CustomisationUIHeader>
	
	<actionmap name="spaceship_general">
		<action name="v_eject">
			<rebind device="joystick" input="js2_button5" />
		</action>
	</actionmap>
 	<actionmap name="spaceship_view">
		<action name="v_view_cycle_fwd">
			<rebind device="joystick" input="js2_button9" />
		</action>
		<action name="v_view_dynamic_focus_toggle">
			<rebind device="joystick" input=" " />
		</action>			
	</actionmap>
 	<actionmap name="spaceship_movement">
		<action name="v_yaw">
			<rebind device="joystick" input="js3_rotz" />
		</action>
		<action name="v_yaw_left">
			<rebind device="joystick" input=" " />
		</action>
		<action name="v_yaw_right">
			<rebind device="joystick" input=" " />
		</action>
		<action name="v_roll">
			<rebind device="joystick" input="js1_x" />
		</action>
		<action name="v_throttle_abs">
			<rebind device="joystick" input="js2_y" />
		</action>
		<action name="v_target_match_vel">
			<rebind device="joystick" input="js1_button3" />
		</action>
		<action name="v_brake">
			<rebind device="joystick" input="js2_button4" />
		</action>
		<action name="v_afterburner">
			<rebind device="joystick" input="js2_button3" />
		</action>
		<action name="v_strafe_up">
			<rebind device="joystick" input="js2_hat2_up" />
		</action>
		<action name="v_strafe_down">
			<rebind device="joystick" input="js2_hat2_down" />
		</action>	
		<action name="v_strafe_right">
			<rebind device="joystick" input="js2_hat2_right" />
		</action>
		<action name="v_strafe_left">
			<rebind device="joystick" input="js2_hat2_left" />
		</action>			
		<action name="v_ifcs_toggle_vector_decoupling">
			<rebind device="joystick" input="js2_button1" />
		</action>
		<action name="v_ifcs_toggle_safeties">
			<rebind device="joystick" input="js2_button7" />
		</action>
		<action name="v_decoupled_strafe_up">
			<rebind device="joystick" input="js2_hat2_up" />
		</action>
		<action name="v_decoupled_strafe_down">
			<rebind device="joystick" input="js2_hat2_down" />
		</action>
		<action name="v_decoupled_strafe_right">
			<rebind device="joystick" input="js2_hat2_right" />
		</action>
		<action name="v_decoupled_strafe_left">
			<rebind device="joystick" input="js2_hat2_left" />
		</action>
		<action name="v_decoupled_yaw">
			<rebind device="joystick" input="js3_rotz" />
		</action>
		<action name="v_decoupled_roll">
			<rebind device="joystick" input="js1_x" />
		</action>
		<action name="v_decoupled_brake">
			<rebind device="joystick" input="js2_button4" />
		</action>
		<action name="v_ifcs_mode_shift">
			<rebind device="joystick" input="js2_button2" />
		</action>
		<action name="v_toggle_qdrive_system">
			<rebind device="joystick" input="js2_button12" />
		</action>
		<action name="v_toggle_qdrive_engagement">
			<rebind device="joystick" input="js1_button2" />
		</action>				
	</actionmap>
 	<actionmap name="spaceship_targeting">
		<action name="v_target_missile_lock_focused">
			<rebind device="joystick" input="js1_button2" />
		</action>		
		<action name="v_target_head_tracking">
			<rebind device="joystick" input="js2_button8" />
		</action>
	</actionmap>	
 	<actionmap name="spaceship_weapons">
		<action name="v_attack1_group2">
			<rebind device="joystick" input="js1_button6" />
		</action>
		<action name="v_attack1_group3">
			<rebind device="joystick" input="js1_button7" />
		</action>		
	</actionmap>
