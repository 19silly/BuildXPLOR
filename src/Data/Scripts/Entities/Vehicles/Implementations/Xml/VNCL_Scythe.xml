   <Animation name="LandingGears" part="hull">
     <States>
       <State name="opened" animation="Fighter_landing_skids_retract" isLooped="0" speedDefault="1" speedMin="0.1" speedMax="1"/>
       <State name="closed" animation="Fighter_landing_skids_retract" isLooped="0" speedDefault="1" speedMin="0.1" speedMax="1"/>
     </States>
   </Animation>
 </Animations>

