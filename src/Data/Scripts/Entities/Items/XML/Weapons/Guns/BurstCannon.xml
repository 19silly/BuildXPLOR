	<sway>
		<param name="maxX" value="1.0" />
		<param name="maxY" value="1.0" />

		<!-- The translation is based off of the sway rotation, when you hit the rotation max you hit the translation max. So, choose maxX/maxY carefully for one thing. -->
		<param name="maxTranslateX" value=".25" />
		<param name="maxTranslateY" value=".25" />

		<!-- This is to prevent the breath swaying from getting too large, depends on the coolDownRate. 
			 The larger the max scale the longer it'll take for the player to cool down.-->
		<param name="maxScale" value="6" />

		<!-- Amount of time for a full sway cycle. For example: let's say minSwaySpeed is when you're at full run, maxSwaySpeed is when you're idle. This is calculated based on the current sway relative to the max sway. -->
		<param name="minSwaySpeed" value="0.75" />
		<param name="maxSwaySpeed" value="4.0" />

		<!-- Decreases the sway scale by this per second until the scale reaches 1.0 -->
		<param name="scaleCoolDownRate" value=".5" />

		<param name="zoomScale" value="1.2" />
		<param name="zoomScaleTime" value="1.0" />
		<!-- This prevents the player from being able to stabalize the gun by holding their breath until 
			 their sway scale is at least this high. -->
		<param name="stabilizeStartMaxScale" value="2" />
		<!-- When the player holds their breath to stabalize the gun, the sway scale is reduced to this amount.* -->
		<param name="stabilizeScale" value="0.15" />
		<!-- When the player goes to hold their breath to stabalize the gun, this is the amount of time it 
			 takes the player to fully stabalize the gun to the above value. -->
		<param name="stabilizeScaleTime" value="1.5"/>
		<!-- This is the maximum amount of time the player can hold their breath after stabalizing the gun before
			 they need to gasp for air. -->
		<param name="stabilizeScaleEndTime" value="4.0" />
		<!-- This is intended to indicate the player gasping for breath after stabilizing the gun, you see the camera suddenly sway quickly. -->
		<param name="stabilizeRecoverScale" value="4.5" />
		<param name="stabilizeRecoverTime" value="0.5" />

		<!-- When firing a weapon this causes the scale to go up. It compounds with recoil, intended to indicate
			 arm soreness after firing a weapon. -->
		<param name="weaponFiringScale" value="3.0" />
		<param name="weaponFiringScaleTime" value="0.25" />

		<param name="sprintScale" value="3.0" />
		<param name="sprintScaleTime" value=".75" />
		<param name="walkScale" value="1.5" />
		<param name="walkScaleTime" value="1.0" />
		<param name="jumpScale" value="3.5" />
		<param name="slideScale" value="2.0" />

		<param name="proneScale" value="0.4"/>
		<param name="crouchScale" value="0.8"/>
		<param name="zerogScale" value=".8"/>

		<!-- * Scales are multiplied together depending on the player state, so you won't necessarily see the exact value in this XML. 
			   For instance holding your breath and zooming your weapon: baseValue * stanceScale * zoomScale * stabalizeScale * firingScale * movementScale -->
	</sway>
	
