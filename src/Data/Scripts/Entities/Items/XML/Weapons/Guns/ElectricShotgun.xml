				<param name="dof_shoulderMinZ" value="0.15" />
				<param name="dof_shoulderMinZScale" value="4.0" />
				<param name="dof_minZ" value="0.11" />
				<param name="dof_minZScale" value="8.0" />
				<param name="zoom_out_delay" value="0.15" />
