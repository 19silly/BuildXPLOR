	<zoommodes>
		<zoommode name="ironsight" type="IronSight">
			<stereo>
				<param name="eyeDistance" value="0.002" />
				<param name="convergenceDistance" value="0.01" />
			</stereo>
			<zoom>
				<param name="suffix" value="iron" />
