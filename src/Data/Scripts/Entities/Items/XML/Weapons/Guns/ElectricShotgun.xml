				<param name="fireRecoilStrength" value="0.5f" />
				<param name="angleRecoilStrength" value="0.4f" />
				<param name="randomness" value="0.0f" />
			</proceduralrecoil>
			<!-- Some params to tweak the recoil of the weapon. (See CSingle::UpdateRecoil() to see how it works!! -->
			<recoil>
				<param name="max_recoil" value="1" />

				<!-- Changed first_attack to work with single shot weapons.  If end_decay = 0 then first shot will be true -->
				<param name="first_attack" value="0.25" />

				<param name="attack" value="0.25" />
				<param name="decay" value="0.5" />
				<param name="end_decay" value="2" />

				<param name="maxx" value="12" />

				<param name="maxy" value="18.0" />

				<param name="randomness" value="0.0" />
				<param name="recoil_holdBreathActive_m" value="1.25" />
				<param name="recoil_crouch_m" value="1.5" />
				<param name="recoil_holdBreathActive_m" value="1.0" />
				<param name="recoil_crouch_m" value="1.0" />

				<!-- these modifiers are applied to the amount of decay reduction per frame, increasing the decay per frame reduces recoil -->
				<param name="recoil_jump_m" value="0.5"/>
				<hints>
					<hint x="0.14"	y="0.59" />
					<hint x="0.10"	y="0.45" />
					<hint x="0.22"	y="0.59" />
					<hint x="0.00"	y="0.39" />
					<hint x="-0.07"	y="0.24" />
					<hint x="-0.17"	y="0.40" />
					<hint x="-0.09"	y="0.35" />
					<hint x="0.04" 	y="0.12" />
					<hint x="0.12" 	y="0.33" />
					<hint x="-0.05"	y="0.5" />
					<hint x="-0.14"	y="0.42" />
					<hint x="-0.05"	y="0.37" />
					<hint x="0.03" 	y="0.6" />
					<hint x="-0.08"	y="0.45" />
					<hint x="0.03" 	y="0.5" />
					<hint x="0.14" 	y="0.37" />
					<hint x="0.08" 	y="0.47" />
					<hint x="0.18" 	y="0.29" />
					<hint x="0.05" 	y="0.40" />
					<hint x="-0.12"	y="0.55" />
					<hint x="-0.13"	y="0.3" />
					<hint x="-0.08"	y="0.15" />
					<hint x="0.05" 	y="0.4" />
					<hint x="-0.12"	y="0.21" />
					<hint x="0.03"	y="0.34" />
					<hint x="0.15"	y="0.43" />
				</hints>
			</recoil>
			<!-- If you don't want your gun to be ping-pong accurate, and make head-shots a bit harder, this will add some spread on top of your shots -->
			<spread>
				<param name="min" value="0.05" />

				<param name="max" value="0.05" />

				<param name="attack" value="1" />

				<param name="decay" value="0.6" />

				<param name="end_decay" value="0.6" />

				<param name="speed_m" value="1.25" />

				<!-- this multiplies the current velocity then adds it to the attack (or min?)- can go above the max spread -->
				<param name="rotation_m" value="0.0" />
				<param name="spread_jump_m" value="1.0" />

				<param name="spread_slide_m" value="1.0" />
				<param name="spread_crouch_m" value="0.75" />

				<param name="speed_holdBreathActive_m" value="0.25" />

				<param name="speed_holdBreathActive_m" value="1.0" />

			</spread>

			<tracer>
