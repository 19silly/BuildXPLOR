				<vent effect="Illfonic_Weapons_Electric_Shotgun.Electric_Shotgun.sideVentSteam" helper="vent_r_front" delay="0.1" />
			</vents>
		</firemode>

		<firemode name="Shotgun" type="Shotgun">
