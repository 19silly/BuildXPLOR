          <light offset="-0.2, -1, -0.5" color="0.5,0.6,1" radius="5" diffMul="2" hdrDyn="0" specMul="1" style="20" />
          <light offset="-0.2,  1,  0.5" color="0.5,0.6,1" radius="5" diffMul="2" hdrDyn="0" specMul="1" style="20" />
