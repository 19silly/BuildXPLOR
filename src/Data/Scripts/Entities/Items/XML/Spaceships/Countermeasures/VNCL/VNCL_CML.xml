					<Effect effect="damage_fx.uee.static.electric_small"  />
					</EffectsList>
				</Debris>
			</DebrisList> 
		</level>
		
		<level damageRatio="1.00">
			<DebrisList>
				<Debris name="base_100_debris1" mass="10" impulse="0,10,0" >
					<EffectsList>
					<Effect effect="damage_fx.uee.static.electric_small"  />
					</EffectsList>
				</Debris>
				<Debris name="base_100_debris2" mass="10" impulse="0,10,0" >
					<EffectsList>
					<Effect effect="damage_fx.uee.debris.debris_fire_small"  />
