<item name="AEGS_Idris_Seat" class="VehicleItemSeat" invisible="0" category="VehicleItem">
  <params>
    <param name="giveable" 		value="0" />
    <param name="selectable" 	value="0" />
    <param name="pickable" 		value="0" />
    <param name="mountable" 	value="1" />
    <param name="usable"		 	value="0" />
    <param name="arms"			 	value="0" />
    <!-- FIX ME!!! --><param name="adb" value="hornetLaserGatlingAnims.adb" />
	<!-- FIX ME!!! --><param name="actionController" value="itemControllerDef.xml" />
    <param name="itemType" value="Seat" />
    <param name="itemSubType" value="Pilot" />
	<param name="itemDescription" value="" />
    <param name="itemManufactor" value="AEGS" />
    <param name="itemSize" value="1" />
	<param name="itemTags" value="flightReady" />
	<param name="requiredPortTags" value="Idris_Base" />
	<param name="itemClass" value="1" />
    <param name="display_name"	value="Idris Seat" />
  	<vehicleItemStats>
	</vehicleItemStats>
  
  </params>
  
	<!-- cbrungardt @ IllFonic below is how you would setup a seat to be ejectable -->
	<Eject>
		<Anim name="Cockpit" state="Eject"/>
		<DetachParts>
			<DetachPart name="Canopy" delayTime="0.5"/>
		</DetachParts>
		<!-- TODO cbrungardt @ IllFonic right now we only handle one seat thruster -->
		<thruster effect="Illfonic_Hornet_Ejection.Seat_Effects.Seat_Thrusters" portName="thruster_01" />
		<param name="EjectionSpeed" value="1000"/>
		<param name="SafeDistance" value="250"/>
	</Eject>
	
	<!-- cbrungardt @ IllFonic below is how you would setup a GForce Reaction animation -->
	<GForceReactions >
		<Forward name="cockpit_hotas_c_l_hornet_gforce_slider_x_body_add" weight="-0.50" blendTime="0.5" layer="6" />
		<Right name="cockpit_hotas_c_l_hornet_gforce_slider_z_body_add" weight="-.25" blendTime="0.5" layer="7" />
	</GForceReactions>

  <geometry>
    <!-- example for more fine grade tags, most of them mapping to the same geometry atm -->
    <!-- default fallback -->
    <thirdperson name="Objects\Spaceships\Seats\ORIG\M50\ORIG_M50_DefaultSeat\ORIG_M50_Ejection_Seat.cga"/>
	
	<tags tag="Hologram">
	
		<thirdperson name="Objects\Spaceships\Seats\ORIG\M50\ORIG_M50_DefaultSeat\ORIG_M50_Ejection_Seat.cga" material="materials/item_selection/material_hologram_neutral.mtl"/>

		<tags tag="ShipHologram">
			<thirdperson name="Objects\Spaceships\Seats\ORIG\M50\ORIG_M50_DefaultSeat\ORIG_M50_Ejection_Seat.cga" material="materials/item_selection/material_hologram_neutral.mtl"/>
		  
			<tags tag="inactive">
				<thirdperson name="Objects\Spaceships\Seats\ORIG\M50\ORIG_M50_DefaultSeat\ORIG_M50_Ejection_Seat.cga" material="materials/item_selection/material_hologram_neutral.mtl"/>
			</tags>
			<tags tag="over dragging">
				<thirdperson name="Objects\Spaceships\Seats\ORIG\M50\ORIG_M50_DefaultSeat\ORIG_M50_Ejection_Seat.cga" material="materials/item_selection/material_hologram_unselected.mtl"/>
			</tags>
			<tags tag="overCompareValid">
				<thirdperson name="Objects\Spaceships\Seats\ORIG\M50\ORIG_M50_DefaultSeat\ORIG_M50_Ejection_Seat.cga" material="materials/item_selection/material_hologram_neutral.mtl"/>
			</tags>
			<tags tag="overCompareInvalid">
				<thirdperson name="Objects\Spaceships\Seats\ORIG\M50\ORIG_M50_DefaultSeat\ORIG_M50_Ejection_Seat.cga" material="materials/item_selection/material_hologram_neutral.mtl"/>
			</tags>
		</tags>
		
		<tags tag="ItemList">
			<thirdperson name="Objects\Spaceships\Seats\ORIG\M50\ORIG_M50_DefaultSeat\ORIG_M50_Ejection_Seat.cga" material="materials/item_selection/material_hologram_neutral.mtl"/>
			<tags tag="over dragging">
				<thirdperson name="Objects\Spaceships\Seats\ORIG\M50\ORIG_M50_DefaultSeat\ORIG_M50_Ejection_Seat.cga" material="materials/item_selection/material_hologram_neutral.mtl"/>
			</tags>
		</tags>	
		
		<tags tag="ItemPreviewA">
		  <thirdperson name="Objects\Spaceships\Seats\ORIG\M50\ORIG_M50_DefaultSeat\ORIG_M50_Ejection_Seat.cga" material=""/>
		</tags>
		
		<tags tag="ItemPreviewB">
		  <thirdperson name="Objects\Spaceships\Seats\ORIG\M50\ORIG_M50_DefaultSeat\ORIG_M50_Ejection_Seat.cga" material=""/>
