              <ControlPart part="turret_chair_joystick_left">
                <Rotate_Z input="roll" direction="-1" min="-5" max="5" />
              </ControlPart>
              <ControlPart part="turret_chair_joystick_left">
                <Rotate_Z input="roll" direction="1" min="-5" max="5" />
