<item name="ANVL_Gladiator_Copilot_Ejection_Seat" class="VehicleItemSeat" invisible="0" category="VehicleItem">
  <params>
    <param name="giveable" 		value="0" />
    <param name="selectable" 	value="0" />
    <param name="pickable" 		value="0" />
    <param name="mountable" 	value="1" />
    <param name="usable"		 	value="0" />
    <param name="arms"			 	value="0" />
    <!-- FIX ME!!! --><param name="adb" value="hornetLaserGatlingAnims.adb" />
	<!-- FIX ME!!! --><param name="actionController" value="itemControllerDef.xml" />
    <param name="itemType" value="Seat" />
    <param name="itemSubType" value="Pilot" />
	<param name="itemDescription" value="" />
    <param name="itemManufactor" value="ANVL" />
    <param name="itemSize" value="1" />
	<param name="itemTags" value="flightReady" />
	<param name="requiredPortTags" value="ANVL_Gladiator" />
	<param name="itemClass" value="1" />
    <param name="display_name"	value="ANVL Gladiator Copilot Ejection Seat" />
  	<vehicleItemStats>
	</vehicleItemStats>
  
  </params>
  
	<!-- Eject Seat-->
	<Eject>
		<Anim name="Canopy" state="Eject"/>
		<DetachParts>
			<DetachPart name="dome_glass" delayTime="1.3"/>
		</DetachParts>
		<!-- Thruster -->
		<thruster effect="Illfonic_Hornet_Ejection.Seat_Effects.Seat_Thrusters" portName="thruster_01" />
		<param name="EjectionSpeed" value="1000"/>
		<param name="SafeDistance" value="250"/>
	</Eject>
	
	<!-- GForce Reaction animation -->
	<GForceReactions >
		<Forward name="cockpit_hotas_c_l_hornet_gforce_slider_x_body_add" weight="-0.15" blendTime="2" layer="6" />
		<Right name="cockpit_hotas_c_l_hornet_gforce_slider_z_body_add" weight="-.15" blendTime="1" layer="7" />
	</GForceReactions>

  <geometry>
    <!-- example for more fine grade tags, most of them mapping to the same geometry atm -->
    <!-- default fallback -->
    <thirdperson name="Objects\Spaceships\Seats\ANVL\Gladiator\ANVL_Gladiator_Copilot_Ejection_Seat.cga"/>
	
	<!-- Only specify a mtl if you don't want to use the default one from Common_EquipmentDevice.xml -->	
	<tags tag="Hologram">
		<thirdperson name="Objects\Spaceships\Seats\ANVL\Gladiator\ANVL_Gladiator_Copilot_Ejection_Seat.cga" material=""/>
	</tags>
		 
    <!-- In this sub-block of geometry, we can define attachment points in some of our character bones -->
    <!-- These attachments can be referenced within this very same script to attach accessories, particle fx... -->

  </geometry>
 </item>