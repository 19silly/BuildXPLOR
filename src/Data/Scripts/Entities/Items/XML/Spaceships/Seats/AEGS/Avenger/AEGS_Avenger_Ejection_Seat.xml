	<!-- cbrungardt @ IllFonic below is how you would setup a seat to be ejectable -->
	<Eject>
		<Anim name="Cockpit" state="Eject"/>
		<DetachParts>
			<DetachPart name="Canopy" delayTime="0.5"/>
		</DetachParts>
		<!-- TODO cbrungardt @ IllFonic right now we only handle one seat thruster -->
		<thruster effect="Illfonic_Hornet_Ejection.Seat_Effects.Seat_Thrusters" portName="thruster_01" />
		<param name="EjectionSpeed" value="1000"/>
		<param name="SafeDistance" value="250"/>
	</Eject>
	
	<!-- cbrungardt @ IllFonic below is how you would setup a GForce Reaction animation -->
	<GForceReactions >
		<Forward name="cockpit_hotas_c_l_hornet_gforce_slider_x_body_add" weight="-0.15" blendTime="2" layer="6" />
		<Right name="cockpit_hotas_c_l_hornet_gforce_slider_z_body_add" weight="-.15" blendTime="1" layer="7" />
	</GForceReactions>

