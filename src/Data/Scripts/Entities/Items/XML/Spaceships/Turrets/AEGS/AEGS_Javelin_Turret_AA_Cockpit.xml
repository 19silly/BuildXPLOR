			</tags>
		</tags>
		
		<tags tag="ItemList">
			<thirdperson name="Objects/Spaceships/Turrets/AEGS/Javelin/Flak_Turret/Test/AEGS_Javelin_Turret_AA_Cockpit.cga" material=""/>
