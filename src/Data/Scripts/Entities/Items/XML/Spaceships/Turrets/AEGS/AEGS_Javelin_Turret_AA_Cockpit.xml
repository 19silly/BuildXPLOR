	<tags tag="HUD">
		<thirdperson name="Objects/Spaceships/Turrets/AEGS/Javelin/Flak_Turret/Test/AEGS_Javelin_Turret_AA_Cockpit.cga" material="materials/item_selection/material_hologram_default.mtl"/>		
	</tags>	

	

    <!-- In this sub-block of geometry, we can define attachment points in some of our character bones -->
