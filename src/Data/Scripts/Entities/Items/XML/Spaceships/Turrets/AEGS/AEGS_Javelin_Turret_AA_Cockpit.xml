				<thirdperson name="Objects/Spaceships/Turrets/AEGS/Javelin/Flak_Turret/Test/AEGS_Javelin_Turret_AA_Cockpit.cga" material="materials/item_selection/material_hologram_neutral.mtl"/>
			</tags>
			<tags tag="over dragging ">
				<thirdperson name="Objects/Spaceships/Turrets/AEGS/Javelin/Flak_Turret/Test/AEGS_Javelin_Turret_AA_Cockpit.cga" material="materials/item_selection/material_hologram_unselected.mtl"/>
