				<Type type="WeaponGun" subtypes="Gun"/>
			</Types>
		</ItemPort>
		<ItemPort name="hardpoint_fixed_weapon_left_top" minsize="1" maxsize="4" flags="turret" display_name="Left Slot">
			<Types>
				<Type type="WeaponGun" subtypes="Gun"/>
			</Types>
		</ItemPort>
		<ItemPort name="hardpoint_fixed_weapon_left_bottom" minsize="1" maxsize="4" flags="turret" display_name="Left Slot">
			<Types>
				<Type type="WeaponGun" subtypes="Gun"/>
			</Types>
		</ItemPort>
	</ports>
  </portParams>
  
