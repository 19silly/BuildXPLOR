  <turretParams>
	<yaw limits="-180, 180" speed="200" >
	<!--<sound name="sounds/mounts_and_turrets:dev_yaw:start_run" 
		stop="sounds/mounts_and_turrets:dev_yaw:stop" loop="0">
		</sound>-->
		<sound name="sounds/mounts_and_turrets:dev_yaw:start_run" 
		stop="sounds/mounts_and_turrets:dev_yaw:stop" loop="0">
		</sound>
		<joint value="helper_yaw" />
	</yaw>
	<pitch limits="-10, 90" speed="200" >
	<!--<sound name="sounds/mounts_and_turrets:dev_pitch:start_run" 
		stop="sounds/mounts_and_turrets:dev_pitch:stop" loop="0">
		</sound>-->
