	<trail>
		<param name="helper" value="laser_bolt01" />
		<param name="effect" value="Spaceships\Weapons\VNCL_Wrath_PC_S5.trail" />
		<param name="effect" value="" />
		<param name="scale" value="1" />
	</trail>
	
	<VehicleDamageParams>
		<param name="damage" value="175" /> 		<!-- This is PHYSICAL damage -->
		<param name="damage_energy" value="300" /> <!-- This is ENERGY damage -->
		<param name="damage_distortion" value="150" /> <!-- This is DISTORTION damage -->
		<param name="radius" value="0" /> <!-- This is the damage radius of the projectile. 0 is point impact -->
	</VehicleDamageParams>

</ammo>
