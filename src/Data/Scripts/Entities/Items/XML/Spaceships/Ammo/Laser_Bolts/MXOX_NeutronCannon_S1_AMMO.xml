<!-- Autogen Projectiles for ammo -->

<ammo name="MXOX_NeutronCannon_S1_AMMO" class="LaserBolt">
	<flags>
		<param name="clientonly" value="1" />
		<param name="reusable" value="1" />
	</flags>
	
	<geometry>
		<firstperson name="Objects/Effects/projectiles/laser_projectile.cgf" material="Materials/Effects/Projectiles/sc_neutron_cannon.mtl" />
	</geometry>
  
	<AudioPreloads>
		<Preload name = "SC_WPWB_WPHA_MXOX"/>
