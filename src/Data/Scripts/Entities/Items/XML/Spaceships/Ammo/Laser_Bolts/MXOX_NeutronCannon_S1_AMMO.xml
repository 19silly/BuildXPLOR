	</physics>

	<params>
		<param name="lifetime" value="0.55" />
		<param name="showtime" value="0" /> <!-- Amount of time delayed before the particle effect is shown in seconds -->
		<param name="damage" value="0" /> 		<!-- This is PHYSICAL damage -->
