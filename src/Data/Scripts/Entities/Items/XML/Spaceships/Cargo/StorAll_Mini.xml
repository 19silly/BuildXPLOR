<item name="StorAll_Mini" class="VehicleItemContainer" invisible="0" category="VehicleItem" >
	<params>
		<param name="giveable" 		value="0" />
		<param name="selectable" 	value="0" />
		<param name="pickable" 		value="0" />
		<param name="mountable" 	value="1" />
		<param name="usable"		 	value="0" />
		<param name="arms"			 	value="0" />
		<param name="itemType" value="Container" />
		<param name="itemSubType" value="Cargo" />
		<param name="itemDescription" value="The 5 ton Stor-All Mini cargo pod allows the enterprising Aurora pilot to begin his business in the commodities transportation sector. It has a double wall and pressurized construction that can withstand the rigors of space or the occasional laser blast." />
		<param name="itemManufactor" value="Stor-All" />
		<param name="itemSize" value="4" />
		<param name="itemTags" value="" />
		<param name="requiredPortTags" value="RSI_Aurora_Base" />
		<param name="display_name"	value="Stor-All Mini" />
	</params>

	<geometry>
		<!-- As this vehicle weapon is remote to the player firing, no first peron geometry -->
		<thirdperson name="Objects\Spaceships\Cargo\Stor-All\Stor_All_Mini_Cargo_Module.cga"/>
		
		<tags tag="Hologram">
		
			<thirdperson name="Objects\Spaceships\Cargo\Stor-All\Stor_All_Mini_Cargo_Module.cga" material=""/>

			<tags tag="ShipHologram">
				<thirdperson name="Objects\Spaceships\Cargo\Stor-All\Stor_All_Mini_Cargo_Module.cga" material=""/>
			  
				<tags tag="inactive">
					<thirdperson name="Objects\Spaceships\Cargo\Stor-All\Stor_All_Mini_Cargo_Module.cga" material=""/>
				</tags>
				<tags tag="over dragging">
					<thirdperson name="Objects\Spaceships\Cargo\Stor-All\Stor_All_Mini_Cargo_Module.cga" material=""/>
				</tags>
				<tags tag="overCompareValid">
					<thirdperson name="Objects\Spaceships\Cargo\Stor-All\Stor_All_Mini_Cargo_Module.cga" material=""/>
				</tags>
				<tags tag="overCompareInvalid">
					<thirdperson name="Objects\Spaceships\Cargo\Stor-All\Stor_All_Mini_Cargo_Module.cga" material=""/>
				</tags>
			</tags>
			
			<tags tag="ItemList">
				<thirdperson name="Objects\Spaceships\Cargo\Stor-All\Stor_All_Mini_Cargo_Module.cga" material=""/>
				<tags tag="over dragging">
					<thirdperson name="Objects\Spaceships\Cargo\Stor-All\Stor_All_Mini_Cargo_Module.cga" material=""/>
				</tags>
			</tags>	
			
			<tags tag="ItemPreviewA">
			  <thirdperson name="Objects\Spaceships\Cargo\Stor-All\Stor_All_Mini_Cargo_Module.cga" material=""/>
			</tags>
			
			<tags tag="ItemPreviewB">
			  <thirdperson name="Objects\Spaceships\Cargo\Stor-All\Stor_All_Mini_Cargo_Module.cga" material=""/>
			</tags>	
			
		</tags>
		<!-- In this sub-block of geometry, we can define attachment points in some of our character bones -->
		<!-- These attachments can be referenced within this very same script to attach accessories, particle fx... -->
	</geometry>	
	
</item>
