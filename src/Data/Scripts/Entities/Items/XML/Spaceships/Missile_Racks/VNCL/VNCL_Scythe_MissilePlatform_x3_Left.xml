  </params>

  <Pipes>
    <Pipe class="Power" prioType="manageable" prioGroup="weapon">
	<States>
      <State state="Idle,Default">
        <Value value="-3" />
        <!-- If not selected -->
      </State>
      <State state="Active">
        <Value value="-10" />
        <!-- If Idle it will use 10 energy points -->
      </State>
      <State state="Off">
        <Value value="0" />
      </State>
      <State state="Targeting">
        <Value value="-30" />
        <!-- if shooting it will use 30 energy points -->
      </State>
	  </States>
    </Pipe>
    <Pipe class="Heat" >
	<States>
      <State state="Idle,Active,Targeting" transition="0.3">
        <Value value="3"/>
      </State>
	  </States>
    </Pipe>
    <Pipe class="Avionics">
	<States>
      <State state="ManualControl">
        <Value value="0"/>
      </State>
      <State state="AutoControl">
        <Value value="20"/>
      </State>
	  </States>
    </Pipe>
  </Pipes>

