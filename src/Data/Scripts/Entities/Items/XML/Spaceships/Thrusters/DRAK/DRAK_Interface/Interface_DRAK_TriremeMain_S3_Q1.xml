<interface name="interface_DRAK_TriremeMain_S3_Q1">
	<!-- 
	This is the model and vfx template for Thrusters.
	Match Entity Name to corresponding item.xml
	Fill damagelevels, geometry and exhausts to complete.
	-->
	<params>
		<param name="giveable" 		value="0" />
		<param name="selectable" 	value="0" />
		<param name="pickable" 		value="0" />
		<param name="mountable" 	value="1" />
		<param name="usable"		 	value="0" />
		<param name="arms"			 	value="0" />
	</params>


  <damagelevels>
	<level damageRatio="0.50">
	</level>
	<level damageRatio="1.00">
		<DebrisList>
			<Debris name="base_100_debris01" mass="10" impulse="0,10,0" >
				<EffectsList>
					<Effect effect="damage_fx.uee.static.fire_small" helper="base_debris1_PFX1" />
				</EffectsList>
			</Debris>
		</DebrisList>
	</level>
  </damagelevels>


  <geometry>
		<!-- Default -->
		<thirdperson name="Objects\Spaceships\Thrusters\DRAK\DRAK_Trireme_S3_Q1.cga"/>

		<tags tag="damage_25">
			<thirdperson name="Objects\Spaceships\Thrusters\DRAK\DRAK_Trireme_S3_Q1_25.cga"/>
		</tags>
		<tags tag="damage_50">
			<thirdperson name="Objects\Spaceships\Thrusters\DRAK\DRAK_Trireme_S3_Q1_50.cga"/>
		</tags>
		<tags tag="damage_75">
			<thirdperson name="Objects\Spaceships\Thrusters\DRAK\DRAK_Trireme_S3_Q1_75.cga"/>
		</tags>
		<tags tag="damage_100">
			<thirdperson name="Objects\Spaceships\Thrusters\DRAK\DRAK_Trireme_S3_Q1_100.cga"/>
		</tags> 
	
		<!-- Only specify a mtl if you don't want to use the default one from Common_EquipmentDevice.xml -->	
		<tags tag="Hologram">
			<thirdperson name="Objects\Spaceships\Thrusters\DRAK\DRAK_Trireme_S3_Q1.cga" material=""/>
		</tags>
		
		<tags tag="HUD">
			<thirdperson name="Objects\Spaceships\Thrusters\DRAK\DRAK_Trireme_S3_Q1.cga" material="materials/item_selection/material_hologram_default.mtl"/>
			<tags tag="damage_50">
			<thirdperson name="Objects\Spaceships\Thrusters\DRAK\DRAK_Trireme_S3_Q1.cga" material="Materials\item_selection\material_hologram_mid_damaged.mtl"/>
		</tags>
		<tags tag="damage_100">
			<thirdperson name="Objects\Spaceships\Thrusters\DRAK\DRAK_Trireme_S3_Q1.cga" material="Materials\item_selection\material_hologram_damaged.mtl"/>
		</tags>	
		</tags>	
		
		<boneAttachments>		
<!-- 			<attachment target="thirdperson" name="nozzle" bone="nozzle_node"/>		 -->
			<attachment target="thirdperson" name="engine_exhaust" bone="exhaust" />
			<attachment target="thirdperson" name="engine_output" bone="exhaust" />
			<attachment target="thirdperson" name="engine_fuel" bone="exhaust" />
			<attachment target="thirdperson" name="engine_heat" bone="exhaust" />
			<attachment target="thirdperson" name="engine_light" bone="exhaust" orientation="0,0,-90"/>
			<attachment target="thirdperson" name="engine_boost_light" bone="exhaust" />
			<attachment target="thirdperson" name="engine_sound" bone="exhaust" orientation="0,0,-180"/>
			<attachment target="thirdperson" name="engine_boost_sound" bone="exhaust" orientation="0,0,-180"/>
		</boneAttachments>
	</geometry>
  
  <thrusters>
	<thruster rotationScale="0.25" retroScale="1.00">
		  <exhausts>
			  <exhaust name ="run" scale ="1" helper="nozzle_exhaust" effectStopThreshold="0.1">
				  <effect name="thruster_fx.Hornet.Manuevering_Thruster" helper="nozzle_exhaust" enable = "0" tag ="run">
					  <strength var="thrust" />
					  <size var="thrust" min="1.0" multiplier="1.5" />
					  <speed var="thrust" min="0.25" multiplier="1" />
				  </effect>
				  <sound name="sounds/thrusters:anvl_flex:start_run" enable ="0" tag = "run" loop = "0">
					  <param name="rpm" var="thrust" lerpTime="2.8" />
					  <param name="boost" var="boost" lerpTime="2" />
					  <param name="in_out" var="in_out" />
				  </sound>
				  <sound name="sounds/thrusters:anvl_flex:stop" enable ="0" tag = "stop" loop = "0">
					  <param name="in_out" var="in_out" />
					  <param name="rpm" var="thrust" lerpTime="2"/>
					  <param name="boost" var="boost" lerpTime="2" />
				  </sound>
			  </exhaust>
		  </exhausts>
	  </thruster>
  </thrusters>

</interface>
