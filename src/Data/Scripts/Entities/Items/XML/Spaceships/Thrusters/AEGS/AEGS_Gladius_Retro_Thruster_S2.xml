<item name="AEGS_Gladius_Retro_Thruster_S2" class="VehicleItemThruster" invisible="0" category="VehicleThruster" interface="interface_AEGS_Gladius_Retro_Thruster_S2" >
	<params>
		<param name="adb" value="Spaceships/Thrusters/thrusterAnims.adb" />
		<param name="actionController" value="Spaceships/Thrusters/thrusterControllerDefs.xml" />
		<param name="itemType" 			value="ManneuverThruster" />
		<param name="itemSubType" 		value="JointThruster" />
		<param name="itemDescription" 	value="item_DescAEGS_Gladius_Retro_Thruster_S2" />
		<param name="itemManufactor" 	value="AEGS" />
		<param name="itemSize" 			value="2" />
		<param name="itemTags" 			value="flightReady" />
		<param name="requiredPortTags" 	value="AEGS_Gladius_Base" />
		<param name="display_name"		value="item_NameAEGS_Gladius_Retro_Thruster_S2" />
		<param name="mass" 				value="50" />
		<param name="hitpoints"			value="50" />
	</params>
	
	<power_grouping>
        <param name="powerGrouping" value ="thruster.auxiliary" />
    </power_grouping>
	   
	<Pipes>
		<Pipe class="Power" prioType="manageable" prioGroup="thruster">
		  <Pool capacity="-100" rate="-10" />
		  <States>
			<State state="Default">
		  <Value value="0" />
		  </State>
		  </States>
		  <StateLevels>
			<Warning  value = "0.5" />
			<Critical value = "0.3" />
			<Fail     value = "0.1" />
		  </StateLevels>
		</Pipe>

		<Pipe class="Heat" prioType="manageable" prioGroup="thruster">
			<Signature name="Infrared" poolMultiplier="0.1" multiplier="1" />
			<Pool capacity="200" rate="20" critical="1" decayRate="10" />
			<States>
				<State state="Off"><Value value="0" /></State>
				<State state="Boost,Active" transition="0.25"><Value value="40" /></State>
				<State state="Idle"><Value value="20" /></State>
			</States>
		</Pipe>

		<Pipe class="Fuel" prioType="critical">
			<States>
				<State state="Default"><Value value="0" /></State>
				<State state="Boost"><Value value="-75" /></State>
			</States>
		</Pipe>
	</Pipes>
	
	<gimbal type="joint" >
		<pitch 	joint="PITCH_CONTROL" 	min ="-90" max ="90" speed="80" accel="40" animation ="" />
		<yaw 	joint="YAW_CONTROL"		min ="-90" max ="90" speed="80" accel="40" animation ="" />
		<roll   joint="" 		min ="" max = "" speed="" accel="" animation ="" />
	</gimbal> 
	
	<thrusters>
	  <thruster flags="maneuver orientation" maxThrust="450000" maneuverScale="" rotationScale="" retroScale="" boostScale="" >
	  </thruster>
  </thrusters>
  
</item>
