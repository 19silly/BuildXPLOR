					  <strength var="thrust" />
				  </effect>
				  <sound name="sounds/thrusters:anvl_joint:start_run" enable ="0" tag = "run" loop="0">
					  <param name="rpm" var="thrust" lerpTime="1.8" />
					  <param name="boost" var="boost" lerpTime="2" />
					  <param name="in_out" var="in_out" />
				  </sound>
				  <sound name="sounds/thrusters:anvl_joint:stop" enable ="0" tag = "stop" loop="0">
					  <param name="in_out" var="in_out" />
					  <param name="rpm" var="thrust" lerpTime="2" />
					  <param name="boost" var="boost" lerpTime="2" />
				  </sound>
			  </exhaust>
		  </exhausts>
