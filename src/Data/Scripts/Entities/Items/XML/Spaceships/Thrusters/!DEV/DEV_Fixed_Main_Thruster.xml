<item name="DEV_Fixed_Main_Thruster" class="VehicleItemThruster" invisible="0" category="VehicleThruster" >
  <params>
		<param name="giveable" 		value="0" />
		<param name="selectable" 	value="0" />
		<param name="pickable" 		value="0" />
		<param name="mountable" 	value="1" />
		<param name="usable"		 	value="0" />
		<param name="arms"			 	value="0" />
		<param name="adb" value="Spaceships/Thrusters/thrusterAnims.adb" />
		<param name="actionController" value="Spaceships/Thrusters/thrusterControllerDefs.xml" />
		<param name="itemType" value="MainThruster" />
		<param name="itemSubType" value="" />
		<param name="itemManufactor" value="Development" />
		<param name="itemSize" value="3" />
		<param name="display_name"	value="Development Fixed Thruster" />
		
		<param name="hitpoints" value="300" />
  </params>

  <power_grouping>
      <param name="powerGrouping" value ="thruster.main" />
  </power_grouping>
  <geometry>
		<!-- Default -->
		<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Fixed_Thruster.cga"/>

		<tags tag="Hologram">
	
			<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Fixed_Thruster.cga" material=""/>

			<tags tag="ShipHologram">
				<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Fixed_Thruster.cga" material=""/>
		  
				<tags tag="inactive">
					<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Fixed_Thruster.cga" material=""/>
				</tags>
				<tags tag="over dragging">
				<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Fixed_Thruster.cga" material=""/>
				</tags>
				<tags tag="overCompareValid">
					<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Fixed_Thruster.cga" material=""/>
				</tags>
				<tags tag="overCompareInvalid">
					<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Fixed_Thruster.cga" material=""/>
				</tags>
			</tags>
		
			<tags tag="ItemList">
				<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Fixed_Thruster.cga" material=""/>
				<tags tag="over dragging">
					<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Fixed_Thruster.cga" material=""/>
				</tags>
			</tags>	
		
			<tags tag="ItemPreviewA">
		  	<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Fixed_Thruster.cga" material=""/>
			</tags>
		
			<tags tag="ItemPreviewB">
		 	 <thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Fixed_Thruster.cga" material=""/>
			</tags>	
		</tags>
		
		<tags tag="HUD">
			<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Fixed_Thruster.cga" material=""/>
		</tags>	
		
		<boneAttachments>
			<attachment target="thirdperson" name="nozzle_exhaust" bone="exhaust" />
		</boneAttachments>
	</geometry>

	<Pipes>
    <Pipe class="Power" prioType="manageable" prioGroup="thruster">
      <Pool capacity="-100" rate="-10" />
      <States>
        <State state="Default">
          <Value value="0" />
        </State>
      </States>
      <StateLevels>
        <Warning  value = "0.5" />
        <Critical value = "0.3" />
        <Fail     value = "0.1" />
      </StateLevels>
    </Pipe>

		<Pipe class="Heat" prioType="manageable" prioGroup="thruster">
			<Signature name="Infrared" poolMultiplier="0.1" multiplier="1" />
			<Pool capacity="200" rate="20" critical="1" decayRate="10" />
			<States>
				<State state="Off"><Value value="0" /></State>
				<State state="Boost,Active" transition="0.25"><Value value="40" /></State>
				<State state="Idle"><Value value="20" /></State>
			</States>
		</Pipe>

		<Pipe class="Fuel" prioType="critical">
			<States>
				<State state="Default"><Value value="0" /></State>
				<State state="Boost"><Value value="-20" /></State>
			</States>
		</Pipe>
	</Pipes>
	
	<gimbal type="fixed" >
	</gimbal>
	
	<thrusters>
		<thruster flags="main rear" maxThrust ="4000000">
			<exhausts>
				<exhaust name ="run" scale ="1.5" helper="nozzle_exhaust" >
					<effect name="thruster_fx.Scythe.Manuevering_Thruster" helper="nozzle_exhaust">
						<strength var="thrust" />
						<scale var="thrust" min="1.0" multiplier="0.5" />
						<speed var="thrust" min="0.25" multiplier="1" />
					</effect>
				</exhaust>
			</exhausts>
		</thruster>
	</thrusters>

</item>
