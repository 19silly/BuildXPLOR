<interface name="interface_ANVL_Joint_MK2">
	<!-- 
	This is the model and vfx template for Thrusters.
	Match Entity Name to corresponding item.xml
	Fill damagelevels, geometry and exhausts to complete.
	-->
	<params>
		<!-- ONLY use if Thruster has special one-off params. All other params should remain in item.xml. -->
	</params>



  <damagelevels>
	<level damageRatio="0.50">
		<DebrisList>
			<Debris name="base_debris1" mass="10" impulse="0,10,0" >
				<EffectsList>
					<Effect effect="damage_fx.uee.static.debris_fire_small" helper="base_debris1_PFX1" />
				</EffectsList>
			</Debris>
			<Debris name="base_debris2" mass="10" impulse="0,10,0" >
				<EffectsList>
					<Effect effect="damage_fx.uee.static.electric_small" helper="base_debris2_PFX1"  />
				</EffectsList>
			</Debris>
		</DebrisList>
	</level>
	<level damageRatio="1.00">
		<DebrisList>
			<Debris name="base_debris1" mass="10" impulse="0,10,0" >
				<EffectsList>
					<Effect effect="damage_fx.uee.static.debris_fire_small" helper="base_debris1_PFX1" />
				</EffectsList>
			</Debris>
		</DebrisList>
	</level>
  </damagelevels>

  <geometry>
		<!-- Default -->
		<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Joint_MK2/ANVL_Joint_MK2_left.cga"/>

		<tags tag="left">
			<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Joint_MK2/ANVL_Joint_MK2_left.cga"/>
			<tags tag="damage_50">
				<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Joint_MK2/ANVL_Joint_MK2_left_50.cga"/>
			</tags>
			<tags tag="damage_100">
				<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Joint_MK2/ANVL_Joint_MK2_left_100.cga"/>
			</tags>
		</tags>
		<tags tag="right">
			<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Joint_MK2/ANVL_Joint_MK2_right.cga"/>
			<tags tag="damage_50">
				<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Joint_MK2/ANVL_Joint_MK2_right_50.cga"/>
			</tags>
			<tags tag="damage_100">
				<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Joint_MK2/ANVL_Joint_MK2_right_100.cga"/>
			</tags>
		</tags>

		<!-- Only specify a mtl if you don't want to use the default one from Common_EquipmentDevice.xml -->	
		<tags tag="Hologram">
			<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Joint_MK2/ANVL_Joint_MK2_left.cga" material=""/>
			
			<tags tag="left">
				<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Joint_MK2/ANVL_Joint_MK2_left.cga" material=""/>
			</tags>
			<tags tag="right">
				<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Joint_MK2/ANVL_Joint_MK2_right.cga" material=""/>
			</tags>
		
		</tags>
		
		<tags tag="HUD">
			<thirdperson name="Objects\UI\Thrusters\Anvil_Aerospace\Joint_MK2\Anvil_Joint_MK2(left)_UI.cga" material="materials/item_selection/material_hologram_default.mtl"/>
			<tags tag="damage_50">
			<thirdperson name="Objects\UI\Thrusters\Anvil_Aerospace\Joint_MK2\Anvil_Joint_MK2(left)_UI.cga" material="Materials\item_selection\material_hologram_mid_damaged.mtl"/>
		</tags>
		<tags tag="damage_100">
			<thirdperson name="Objects\UI\Thrusters\Anvil_Aerospace\Joint_MK2\Anvil_Joint_MK2(left)_UI.cga" material="Materials\item_selection\material_hologram_damaged.mtl"/>
		</tags>	
		</tags>	
		
		<boneAttachments>
			<attachment target="thirdperson" name="nozzle_exhaust" bone="exhaust" />
		</boneAttachments>	
	</geometry>
  
  <thrusters>
	<thruster>
	  <exhausts>
			  <exhaust name ="run" scale ="1" helper="nozzle_exhaust" effectStopThreshold="0.1" >
				  <effect name="thruster_fx.Templates.Thrust-Maneuver-01-Fixed" helper="nozzle_exhaust" enable="0" tag ="run">
					  <strength var="thrust" />
				  </effect>
				  <sound name="Play_SSTM_ANVL_Joint_MK2_Start_Run" enable ="0" tag = "run" loop="0">
					  <param name="rpm" var="thrust" lerpTime="1.8" />
					  <param name="boost" var="boost" lerpTime="2" />
					  <param name="in_out" var="in_out" />
				  </sound>
				  <sound name="Stop_SSTM_ANVL_Joint_MK2_Start_Run" enable ="0" tag = "stop" loop="0">
					  <param name="in_out" var="in_out" />
					  <param name="rpm" var="thrust" lerpTime="2" />
					  <param name="boost" var="boost" lerpTime="2" />
				  </sound>
			  </exhaust>
		  </exhausts>
	  </thruster>
  </thrusters>

</interface>
