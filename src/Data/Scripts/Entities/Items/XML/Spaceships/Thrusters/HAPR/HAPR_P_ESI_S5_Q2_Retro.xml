	<Pipes>
		<Pipe class="Power" prioType="manageable" prioGroup="thruster">
		  <Pool capacity="-100" rate="-10" />
		  <States>
			<State state="Default">
		  <Value value="0" />
		  </State>
		  </States>
		  <StateLevels>
			<Warning  value = "0.5" />
			<Critical value = "0.3" />
			<Fail     value = "0.1" />
		  </StateLevels>
		</Pipe>

