<interface name="interface_ANVL_Flex_MK3">
	<!-- 
	This is the model and vfx template for Thrusters.
	Match Entity Name to corresponding item.xml
	Fill damagelevels, geometry and exhausts to complete.
	-->
	<params>
		<param name="giveable" 			value="0" />
		<param name="selectable" 		value="0" />
		<param name="pickable" 			value="0" />
		<param name="mountable" 		value="1" />
		<param name="usable"		 	value="0" />
		<param name="arms"			 	value="0" />
		<!-- <param name="adb" value="Spaceships/Thrusters/thrusterAnims.adb" />
		<param name="actionController" value="Spaceships/Thrusters/thrusterControllerDefs.xml" /> -->
	</params>



  <damagelevels>
	<level damageRatio="0.50">
	</level>
	<level damageRatio="1.00">
		<DebrisList>
			<Debris name="base_100_debris01" mass="10" impulse="0,10,0" >
				<EffectsList>
					<Effect effect="damage_fx.uee.static.fire_small" helper="base_debris1_PFX1" />
				</EffectsList>
			</Debris>
		</DebrisList>
	</level>
  </damagelevels>


   <geometry>
		<!-- Default -->
		<thirdperson name="Objects\Spaceships\Thrusters\anvl\flex_mk3\ANVL_Flex_MK3_topbackleft.chr"/>

		<tags tag="topfrontleft">
			<thirdperson name="Objects\Spaceships\Thrusters\anvl\flex_mk3\ANVL_Flex_MK3_topfrontleft.chr"/>
		</tags>
		
		<tags tag="topfrontright">
			<thirdperson name="Objects\Spaceships\Thrusters\anvl\flex_mk3\ANVL_Flex_MK3_topfrontright.chr"/>
		</tags>

		<tags tag="topbackleft">
			<thirdperson name="Objects\Spaceships\Thrusters\anvl\flex_mk3\ANVL_Flex_MK3_topbackleft.chr"/>
		</tags>

		<tags tag="topbackright">
			<thirdperson name="Objects\Spaceships\Thrusters\anvl\flex_mk3\ANVL_Flex_MK3_topbackright.chr"/>
		</tags>

		<!-- Only specify a mtl if you don't want to use the default one from Common_EquipmentDevice.xml -->
		<tags tag="Hologram">
			<thirdperson name="Objects\Spaceships\Thrusters\anvl\flex_mk3\ANVL_Flex_MK3_topfrontleft.chr" material=""/>
		</tags>
		
		<tags tag="HUD">
			<thirdperson name="Objects\Spaceships\Thrusters\anvl\flex_mk3\ANVL_Flex_MK3_topfrontleft.chr" material="materials/item_selection/material_hologram_default.mtl"/>
			<tags tag="damage_50">
			<thirdperson name="Objects\Spaceships\Thrusters\anvl\flex_mk3\ANVL_Flex_MK3_topfrontleft.chr" material="Materials\item_selection\material_hologram_mid_damaged.mtl"/>
		</tags>
		<tags tag="damage_100">
			<thirdperson name="Objects\Spaceships\Thrusters\anvl\flex_mk3\ANVL_Flex_MK3_topfrontleft.chr" material="Materials\item_selection\material_hologram_damaged.mtl"/>
		</tags>	
		</tags>	
		
		<boneAttachments>
			<attachment target="thirdperson" name="nozzle_exhaust" bone="exhaust" />
		</boneAttachments>
	</geometry>
  
  <thrusters>
	  <thruster>
	      <exhausts>
			  <exhaust name ="run" scale ="1" helper="nozzle_exhaust" effectStopThreshold="0.1">
				  <effect name="Spaceships\Thrusters\ANVL_Flex_Mk3.Thruster_ALL.ANVL_Flex_Mk3" helper="nozzle_exhaust" enable = "0" tag ="run">
					<strength var="thrust" />
					<speed var="speed" multiplier="3" />	
				  </effect>
				  <sound name="Play_SSTM_ANVL_Flex_MK1_S2_Q1_Start_Run" enable ="0" tag = "run" loop = "0">
					  <param name="rpm" var="thrust" lerpTime="2.8" />
					  <param name="boost" var="boost" lerpTime="2" />
					  <param name="in_out" var="in_out" />
				  </sound>
				  <sound name="Stop_SSTM_ANVL_Flex_MK1_S2_Q1_Start_Run" enable ="0" tag = "stop" loop = "0">
					  <param name="in_out" var="in_out" />
					  <param name="rpm" var="thrust" lerpTime="2"/>
					  <param name="boost" var="boost" lerpTime="2" />
				  </sound>
			  </exhaust>
		  </exhausts>
	  </thruster>
  </thrusters>

</interface>
