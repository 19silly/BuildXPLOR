<item name="DEV_Joint_Thruster" class="VehicleItemThruster" invisible="0" category="VehicleThruster" >
  <params>
		<param name="giveable" 		value="0" />
		<param name="selectable" 	value="0" />
		<param name="pickable" 		value="0" />
		<param name="mountable" 	value="1" />
		<param name="usable"		 	value="0" />
		<param name="arms"			 	value="0" />
		<param name="adb" value="Spaceships/Thrusters/thrusterAnims.adb" />
		<param name="actionController" value="Spaceships/Thrusters/thrusterControllerDefs.xml" />
		<param name="itemType" value="ManneuverThruster" />
		<param name="itemSubType" value="JointThruster" />
		<param name="itemManufactor" value="Development" />
		<param name="itemSize" value="1" />
		<param name="display_name"	value="Development Jointed Thruster" />

		<param name="inefficiency" value="0.3" />
		<param name="mass" value="50" />
		<param name="hitpoints" value="300" />
  </params>

    <power_grouping>
        <param name="powerGrouping" value ="thruster.auxiliary" />
    </power_grouping>
  <geometry>
		<!-- Default -->
		<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Joint_Thruster.cga"/>

		<tags tag="Hologram">
	
			<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Joint_Thruster.cga" material=""/>

			<tags tag="ShipHologram">
				<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Joint_Thruster.cga" material=""/>
		  
				<tags tag="inactive">
					<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Joint_Thruster.cga" material=""/>
				</tags>
				<tags tag="over dragging">
				<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Joint_Thruster.cga" material=""/>
				</tags>
				<tags tag="overCompareValid">
					<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Joint_Thruster.cga" material=""/>
				</tags>
				<tags tag="overCompareInvalid">
					<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Joint_Thruster.cga" material=""/>
				</tags>
			</tags>
		
			<tags tag="ItemList">
				<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Joint_Thruster.cga" material=""/>
				<tags tag="over dragging">
					<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Joint_Thruster.cga" material=""/>
				</tags>
			</tags>	
		
			<tags tag="ItemPreviewA">
		  	<thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Joint_Thruster.cga" material=""/>
			</tags>
		
			<tags tag="ItemPreviewB">
		 	 <thirdperson name="Objects/Spaceships/Thrusters/!Development/DEV/DEV_Debug_Joint_Thruster.cga" material=""/>
			</tags>	
		
		</tags>
		
		<tags tag="HUD">
			<thirdperson name="Objects/UI/Thrusters/Anvil_Aerospace/Joint_MK2/Anvil_Joint_MK2(left)_UI.cga" material="materials/item_selection/material_hologram_default.mtl"/>
			<tags tag="damage_50">
			<thirdperson name="Objects/UI/Thrusters/Anvil_Aerospace/Joint_MK2/Anvil_Joint_MK2(left)_UI.cga" material="Materials/item_selection/material_hologram_mid_damaged.mtl"/>
		</tags>
		<tags tag="damage_100">
			<thirdperson name="Objects/UI/Thrusters/Anvil_Aerospace/Joint_MK2/Anvil_Joint_MK2(left)_UI.cga" material="Materials/item_selection/material_hologram_damaged.mtl"/>
		</tags>	
		</tags>	
		
		<boneAttachments>
			<attachment target="thirdperson" name="nozzle_exhaust" bone="exhaust" />
		</boneAttachments>	
	</geometry>

	<Pipes>
    <Pipe class="Power" prioType="manageable" prioGroup="thruster">
      <Pool capacity="-100" rate="-10" />
      <States>
        <State state="Default">
          <Value value="0" />
        </State>
      </States>
      <StateLevels>
        <Warning  value = "0.5" />
        <Critical value = "0.3" />
        <Fail     value = "0.1" />
      </StateLevels>
    </Pipe>

		<Pipe class="Heat" prioType="manageable" prioGroup="thruster">
			<Signature name="Infrared" poolMultiplier="0.1" multiplier="1" />
			<Pool capacity="200" rate="20" critical="1" decayRate="10" />
			<States>
				<State state="Off"><Value value="0" /></State>
				<State state="Boost,Active" transition="0.25"><Value value="40" /></State>
				<State state="Idle"><Value value="20" /></State>
			</States>
		</Pipe>

		<Pipe class="Fuel" prioType="critical">
			<States>
				<State state="Default"><Value value="0" /></State>
				<State state="Boost"><Value value="-20" /></State>
			</States>
		</Pipe>
	</Pipes>
	
	<gimbal type="joint" >
		<yaw joint="debug_direction" min ="-90" max ="90" speed="80" acceleration="40" >
			<!--<sound name="sounds/thrusters:dev_joint:gimbal_azimuth" 
			stop="sounds/thrusters:dev_joint:gimbal_azimuth_stop" loop="0">
			<param name="in_out" var="in_out" />
			</sound>-->
		</yaw>
	</gimbal>

  <thrusters>
	  <thruster flags="maneuver orientation" maxThrust="2000000" >
		  <exhausts>
			  <exhaust name ="run" scale ="2" helper="nozzle_exhaust" effectStopThreshold="0.3">
				  <effect name="thruster_fx.Hornet.Manuevering_Thruster" helper="nozzle_exhaust" enable="0" tag ="run">
					  <strength var="thrust" />
					  <size var="thrust" min="1.0" multiplier="0.5" />
					  <speed var="thrust" min="0.25" multiplier="1" />
				  </effect>
				  <sound name="sounds/thrusters:dev_joint:start_run" enable ="0" tag = "run" loop="0">
					  <param name="rpm" var="thrust" lerpTime="0.8" />
					  <param name="load" var="load" min="0.2" lerpTime="0.1" />
					  <param name="in_out" var="in_out" />
					
				  </sound>
				  <sound name="sounds/thrusters:dev_joint:stop" enable ="0" tag = "stop" loop="0">
					  <param name="in_out" var="in_out" />
					  <param name="rpm" var="thrust" lerpTime="0.3" />
				  </sound>
			  </exhaust>
		  </exhausts>
	  </thruster>
  </thrusters>
</item>
