<item name="Anvil_Flex_MK2" class="VehicleItemThruster" invisible="0" category="VehicleThruster" >
  <params>
		<param name="giveable" 		value="0" />
		<param name="selectable" 	value="0" />
		<param name="pickable" 		value="0" />
		<param name="mountable" 	value="1" />
		<param name="usable"		 	value="0" />
		<param name="arms"			 	value="0" />
		<param name="adb" value="Spaceships/Thrusters/thrusterAnims.adb" />
		<param name="actionController" value="Spaceships/Thrusters/thrusterControllerDefs.xml" />
		<param name="itemType" value="ManneuverThruster" />
		<param name="itemSubType" value="FlexThruster" />
		<param name="itemManufactor" value="Anvil_Aerospace" />
		<param name="itemSize" value="2" />
		<param name="itemTags" value="flightReady" />
		<param name="requiredPortTags" value="ANVL_Hornet_Base" />
		<param name="display_name"	value="Anvil MK2 Flex Thruster" />
		
		<param name="inefficiency" value="0.3" />
		<param name="hitpoints" value="200" />
		<param name="mass" value="50" />
  </params>

    <power_grouping>
      <param name="powerGrouping" value ="thruster.auxiliary" />
    </power_grouping>
  <damagelevels>
	<level damageRatio="0.50">
	</level>
	<level damageRatio="1.00">
		<DebrisList>
			<Debris name="base_100_debris01" mass="10" impulse="0,10,0" >
				<EffectsList>
					<Effect effect="" helper="base_debris1_PFX1" />
				</EffectsList>
			</Debris>
		</DebrisList>
	</level>
  </damagelevels>


  <geometry>
		<!-- Default -->
		<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top rear left).chr"/>

		<tags tag="upper">
			<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top rear left).chr"/>
			<tags tag="left">
				<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top rear left).chr"/>
				<tags tag="front">
					<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top front left).chr"/>
						<tags tag="damage_50">
							<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top front left)_50.chr"/>
						</tags>
						<tags tag="damage_100">
							<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top front left)_100.cga"/>
						</tags>
				</tags>
				<tags tag="rear">
					<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top rear left).chr"/>
						<tags tag="damage_50">
							<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top rear left)_50.chr"/>
						</tags>
						<tags tag="damage_100">
							<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top rear left)_100.cga"/>
						</tags>
				</tags>
			</tags>
			<tags tag="right">
				<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top rear right).chr"/>
				<tags tag="front">
					<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top front right).chr"/>
						<tags tag="damage_50">
							<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top front right)_50.chr"/>
						</tags>
						<tags tag="damage_100">
							<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top front right)_100.cga"/>
						</tags>
				</tags>
				<tags tag="rear">
					<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top rear right).chr"/>
						<tags tag="damage_50">
							<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top rear right)_50.chr"/>
						</tags>
						<tags tag="damage_100">
							<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top rear right)_100.cga"/>
						</tags>
				</tags>
			</tags>
		</tags>

		<!-- Only specify a mtl if you don't want to use the default one from Common_EquipmentDevice.xml -->	
		<tags tag="Hologram">
			<thirdperson name="Objects/Spaceships/Thrusters/Anvil_Aerospace/Flex_MK2/Anvil_Flex_MK2(top front left).chr" material=""/>
		</tags>
		
		<tags tag="HUD">
			<thirdperson name="Objects\UI\Thrusters\Anvil_Aerospace\Flex_MK2\Anvil_Flex_MK2 (front left)_UI.cga" material="materials/item_selection/material_hologram_default.mtl"/>
			<tags tag="damage_50">
			<thirdperson name="Objects\UI\Thrusters\Anvil_Aerospace\Flex_MK2\Anvil_Flex_MK2 (front left)_UI.cga" material="Materials\item_selection\material_hologram_mid_damaged.mtl"/>
		</tags>
		<tags tag="damage_100">
			<thirdperson name="Objects\UI\Thrusters\Anvil_Aerospace\Flex_MK2\Anvil_Flex_MK2 (front left)_UI.cga" material="Materials\item_selection\material_hologram_damaged.mtl"/>
		</tags>	
		</tags>	
		
		<boneAttachments>
			<attachment target="thirdperson" name="nozzle_exhaust" bone="exhaust" />
    </boneAttachments>
	</geometry>

  <Pipes>
    <Pipe class="Power" prioType="manageable" prioGroup="thruster">
      <Pool capacity="-100" rate="-10" />
      <States>
        <State state="Default">
				  <Value value="0" />
		    </State>
      </States>
      <StateLevels>
        <Warning  value = "0.5" />
        <Critical value = "0.3" />
        <Fail     value = "0.1" />
      </StateLevels>
    </Pipe>
        
		<Pipe class="Heat" prioType="manageable" prioGroup="thruster">
			<Signature name="Infrared" poolMultiplier="0.1" multiplier="1" />
			<Pool capacity="200" rate="20" critical="1" decayRate="10" />
			<States>
				<State state="Off"><Value value="0" /></State>
				<State state="Active" transition="0.25"><Value value="20" /></State>
				<State state="Boost" transition="0.25"><Value value="50" /></State>
				<State state="Idle"><Value value="10" /></State>
			</States>
		</Pipe>

		<Pipe class="Fuel" prioType="critical">
			<States>
				<State state="Default"><Value value="0" /></State>
				<State state="Boost"><Value value="-20" /></State>
			</States>
		</Pipe>
	</Pipes>
	
	<heatOverflow>
		<param name="damageLevel" value="0.20" /> <!-- If "damageLevel" isn't defined, the default min level before taking damage is 0.5 -->
		<param name="damageMin" value="0" />
		<param name="damageMax" value="0" />
		<param name="damageTick" value="0.25" />
		<param name="cooldownTime" value = "3.0" />
	</heatOverflow>


  <gimbal type="flex" >
		<roll min ="-180" max ="0" speed="240" accel="2400" animation = "roll" >
			<!--<sound name ="Play_SSTM_ANVL_Flex_MK1_S2_Q1_Gimbal_Roll" stop ="Play_SSTM_ANVL_Flex_MK1_S2_Q1_Gimbal_Roll_stop" loop = "0" >
				<param name="in_out" var="in_out" />
			</sound>-->
		</roll>
		<yaw min ="0" max ="90" speed="240" accel="2400" animation = "yaw" >
			<!--<sound name = "Play_SSTM_ANVL_Flex_MK1_S2_Q1_Gimbal_Yaw" stop = "Play_SSTM_ANVL_Flex_MK1_S2_Q1_Gimbal_Yaw_stop"/>-->
		</yaw>
	</gimbal>
  <thrusters>
	  <thruster flags="maneuver orientation retro" maxThrust ="480000" rotationScale="1.0" retroScale="1.0">
		  <exhausts>
			  <exhaust name ="run" scale ="1" helper="nozzle_exhaust" effectStopThreshold="0.1"/>
		  </exhausts>
	  </thruster>
  </thrusters>
	
	<EntityEffects>
		<effect name="thruster_fx.Templates.Thrust-Maneuver-01-Fixed" helper="nozzle_exhaust" enable = "0" tag ="run">
			<strength var="thrust" />
			<speed var="speed" multiplier="3" />	
		</effect>
		<sound name="Play_SSTM_ANVL_Flex_MK1_S2_Q1_Start_Run" enable ="0" tag = "run">
			<param name="rpm" var="thrust" lerpTime="2.8" />
			<param name="boost" var="boost" lerpTime="2" />
			<param name="in_out" var="in_out" />
		</sound>
	</EntityEffects>
</item>
