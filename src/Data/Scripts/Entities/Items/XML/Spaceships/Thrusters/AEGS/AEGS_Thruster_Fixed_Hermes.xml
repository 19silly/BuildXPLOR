<item name="AEGS_Thruster_Fixed_Hermes" class="VehicleItemThruster" invisible="0" category="VehicleThruster" >
  <params>
		<param name="giveable" 		value="0" />
		<param name="selectable" 	value="0" />
		<param name="pickable" 		value="0" />
		<param name="mountable" 	value="1" />
		<param name="usable"		 	value="0" />
		<param name="arms"			 	value="0" />
		<param name="adb" value="Spaceships/Thrusters/thrusterAnims.adb" />
		<param name="actionController" value="Spaceships/Thrusters/thrusterControllerDefs.xml" />
		<param name="itemType" value="ManneuverThruster" />
		<param name="itemSubType" value="FixedThruster" />
		<param name="itemManufactor" value="AEGS" />
		<param name="itemSize" value="2" />
		<param name="itemTags" value="flightReady" />
		<param name="requiredPortTags" value="AEGS_Retaliator_Base" />
		<param name="itemDescription" value="item_DescAEGS_Thruster_Fixed_Hermes" />
		<param name="display_name"	value="item_NameAEGS_Thruster_Fixed_Hermes" />
		<param name="hitpoints" value="100" />
		<param name="mass" value="250" />
  </params>

    <power_grouping>
      <param name="powerGrouping" value ="thruster.auxiliary" />
    </power_grouping>
	
  <damagelevels>
	<level damageRatio="0.50">
	</level>
	<level damageRatio="1.00">
		<DebrisList>
			<Debris name="base_100_debris01" mass="10" impulse="0,10,0" >
				<EffectsList>
					<Effect effect="" helper="base_debris1_PFX1" />
				</EffectsList>
			</Debris>
		</DebrisList>
	</level>
  </damagelevels>


  <geometry>
		<!-- Default -->
		<thirdperson name="Objects/Spaceships/Thrusters/AEGS/hermes/AEGS_Thruster_Fixed_Hermes.cga"/>

		<!-- Only specify a mtl if you don't want to use the default one from Common_EquipmentDevice.xml -->	
		<tags tag="Hologram">
			<thirdperson name="Objects/Spaceships/Thrusters/AEGS/hermes/AEGS_Thruster_Fixed_Hermes.cga" material=""/>
		</tags>
		
		<tags tag="HUD">
			<thirdperson name="Objects/Spaceships/Thrusters/AEGS/hermes/AEGS_Thruster_Fixed_Hermes.cga" material="materials/item_selection/material_hologram_default.mtl"/>
			<tags tag="damage_50">
			<thirdperson name="Objects/Spaceships/Thrusters/AEGS/hermes/AEGS_Thruster_Fixed_Hermes.cga" material="Materials\item_selection\material_hologram_mid_damaged.mtl"/>
		</tags>
		<tags tag="damage_100">
			<thirdperson name="Objects/Spaceships/Thrusters/AEGS/hermes/AEGS_Thruster_Fixed_Hermes.cga" material="Materials\item_selection\material_hologram_damaged.mtl"/>
		</tags>	
		</tags>	
		
		<boneAttachments>
			<attachment target="thirdperson" name="nozzle_exhaust" bone="exhaust" />
    </boneAttachments>
	</geometry>

  	<Pipes>
		<Pipe class="Power" prioType="manageable" prioGroup="thruster">
      <Pool capacity="-100" rate="-10" />
      <States>
        <State state="Default">
				  <Value value="0" />
		    </State>
      </States>
      <StateLevels>
        <Warning  value = "0.5" />
        <Critical value = "0.3" />
        <Fail     value = "0.1" />
      </StateLevels>
    </Pipe>

		<Pipe class="Heat" prioType="manageable" prioGroup="thruster">
			<Signature name="Infrared" poolMultiplier="0.1" multiplier="1" />
			<Pool capacity="200" rate="20" critical="1" decayRate="10" />
			<States>
				<State state="Off"><Value value="0" /></State>
				<State state="Boost,Active" transition="0.25"><Value value="40" /></State>
				<State state="Idle"><Value value="20" /></State>
			</States>
		</Pipe>

		<Pipe class="Fuel" prioType="critical">
			<States>
				<State state="Default"><Value value="0" /></State>
				<State state="Boost"><Value value="-600" /></State>
			</States>
		</Pipe>
	</Pipes>


	
	<gimbal type="fixed" >
	</gimbal> 
	
  <thrusters>
	  <thruster flags="maneuver orientation" maxThrust ="1125000" rotationScale="0.9" boostScale="1.5" >
		  <exhausts>
			  <exhaust name ="run" scale ="1" helper="nozzle_exhaust" effectStopThreshold="0.1">
				  <effect name="Spaceships\Thrusters\AEGS_Thruster_Fixed_Hermes.Thruster_ALL.AEGS_Thruster_Fixed_Hermes" helper="nozzle_exhaust" enable = "0" tag ="run">
					  <strength var="thrust" />
				  </effect>
				  <sound name="Play_SSTM_ANVL_Flex_MK1_S2_Q1_Start_Run" enable ="0" tag = "run">
					  <param name="rpm" var="thrust" lerpTime="2.8" />
					  <param name="boost" var="boost" lerpTime="2" />
					  <param name="in_out" var="in_out" />
				  </sound>
			  </exhaust>
		  </exhausts>
	  </thruster>
  </thrusters>
  
	
  
</item>
