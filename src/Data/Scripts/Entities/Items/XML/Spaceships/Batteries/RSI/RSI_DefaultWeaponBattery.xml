		<param name="selectable" 	value="0" />
		<param name="pickable" 		value="0" />
		<param name="mountable" 	value="1" />
		<param name="usable"		 	value="0" />
		<param name="arms"			 	value="0" />
		<param name="itemType" value="Battery" />
		<param name="itemSubType" value="Weapon" />
		<param name="itemManufactor" value="RSI" />
		<param name="itemSize" value="1" />
		<param name="display_name"	value="RSI Weapon Battery" />
	</params>

	<geometry>
		<!-- As this vehicle weapon is remote to the player firing, no first peron geometry -->
		<!--<thirdperson name="Objects/Spaceships/Vehicle_Items/HP_Engine_Boost_01.cgf"/>-->
