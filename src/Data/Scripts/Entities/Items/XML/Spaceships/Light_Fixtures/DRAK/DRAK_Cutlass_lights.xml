<item name="DRAK_Cutlass_lights" class="VehicleItemLight" invisible="0" category="VehicleItem" >
	<params>
		<param name="giveable" 		value="0" />
		<param name="selectable" 	value="0" />
		<param name="pickable" 		value="0" />
		<param name="mountable" 	value="1" />
		<param name="usable"		 	value="0" />
		<param name="arms"			 	value="0" />

		<param name="itemType" value="Light" />
		<param name="itemSubType" value="External" />
		<param name="itemDescription" value="Cutlass Light Set" />
		<param name="itemManufactor" value="DRAK" />
		<param name="itemSize" value="1" />
		<param name="itemTags" value="flightReady" />
		<param name="requiredPortTags" value="DRAK_Cutlass_Base" />
		<param name="display_name"	value="DRAK Cutlass Light Set" />
	</params>

	<geometry>
		<!-- As this vehicle weapon is remote to the player firing, no first person geometry -->
		<!--<thirdperson name="Objects/Spaceships/Lighting/KGGR/KGGR_GeneralNavLight_1.cgf"/> -->
				
		<!-- In this sub-block of geometry, we can define attachment points in some of our character bones -->
		<!-- These attachments can be referenced within this very same script to attach accessories, particle fx... -->
	</geometry>	

	<prefabs>	
		<tags tag="body_black">
		  <prefab file = "Prefabs/drak_cutlass.xml" name ="lighting.light_cutlass_black_all" root="ROOT" /> 
		</tags>
		<tags tag="body_red">
		  <prefab file = "Prefabs/drak_cutlass.xml" name ="lighting.light_cutlass_red_all" root="ROOT" /> 
		</tags>
		<tags tag="body_blue">
		  <prefab file = "Prefabs/drak_cutlass.xml" name ="lighting.light_cutlass_blue_all" root="ROOT" /> 
		</tags>		
	</prefabs>
	
	
</item>
