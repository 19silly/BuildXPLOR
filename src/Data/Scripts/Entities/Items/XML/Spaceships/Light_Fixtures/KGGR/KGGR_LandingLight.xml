<item name="KGGR_LandingLight" class="VehicleItemLight" invisible="0" category="VehicleItem" >
	<params>
		<param name="giveable" 		value="0" />
		<param name="selectable" 	value="0" />
		<param name="pickable" 		value="0" />
		<param name="mountable" 	value="1" />
		<param name="usable"		 	value="0" />
		<param name="arms"			 	value="0" />

		<param name="itemType" value="Light" />
		<param name="itemSubType" value="External" />
		<param name="itemDescription" value="Landing light" />
		<param name="itemManufactor" value="KGGR" />
		<param name="itemSize" value="1" />
		<param name="itemTags" value="flightReady" />
		<param name="display_name"	value="KGGR Landing" />
	</params>

	<geometry>
		<!-- As this vehicle weapon is remote to the player firing, no first person geometry -->
		<thirdperson name="Objects/Spaceships/Lighting/KGGR/KGGR_LandingLight.cgf"/>
		<!-- In this sub-block of geometry, we can define attachment points in some of our character bones -->
		<!-- These attachments can be referenced within this very same script to attach accessories, particle fx... -->
	</geometry>	

	<prefabs>
		
		<prefab file = "Prefabs/ANVL_Hornet.xml" name ="Lights_dfm.port_wing_landing" root="ROOT" /> 
		
		<tags tag="port_wing_landing">
		  <prefab file = "Prefabs/ANVL_Hornet.xml" name ="Lights_dfm.port_wing_landing" root="ROOT" /> 
		</tags>
		<tags tag="starboard_wing_landing">
		  <prefab file = "Prefabs/ANVL_Hornet.xml" name ="Lights_dfm.starboard_wing_landing" root="ROOT" /> 
		</tags>
	</prefabs>
	
	
</item>
