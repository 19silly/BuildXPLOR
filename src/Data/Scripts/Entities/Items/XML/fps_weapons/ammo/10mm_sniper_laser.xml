<ammo name="10mm_sniper_laser" class="LaserBolt">
	<geometry>
		<firstperson name="objects/effects/projectiles/laser_projectile.cgf" material="Materials/Effects/Projectiles/fps_red_laser.mtl" />
		<maxcharge name="objects/effects/projectiles/laser_projectile.cgf" material="Materials/Effects/Projectiles/fps_orange_laser.mtl" />
		<overcharge name="objects/effects/projectiles/laser_projectile.cgf" material="Materials/Effects/Projectiles/fps_blue_laser.mtl" />
	</geometry>
	<flags>
		<param name="clientonly" value="1" />
		<param name="reusable" value="1" />
	</flags>
	<whiz>
		<param name="play_trigger" value="Play_WPWB_WPFA_Laser_Whiz_Sniper_Rifle" />
		<param name="distance" value="30" />
	</whiz>
	<ricochet>
		<param name="play_trigger" value="Play_WPRC_WPFA_Laser_Ricochet" />
	</ricochet>
	<physics type="particle">
		<param name="mass" value="0.2" />
		<param name="speed" value="500"/>
		<param name="speed_max_charge" value="1400" />
		<param name="air_resistance" value="0" />
		<param name="radius" value="0.05" />
		<param name="water_resistance" value="0" />
		<param name="gravity" value="0, 0, 0" />
		<param name="water_gravity" value="0, 0, 0" />
		<param name="material" value="mat_metal" />
		<param name="pierceability" value="0" />
		<param name="single_contact" value="1" />
		<param name="no_path_alignment" value="1"/>
		<param name="constant_orientation" value="1"/>
		<param name="no_self_collisions" value="1"/>
		<pierceabilityLevels>
			<param name="level1" value="0" />
			<param name="maxPenetrationThickness" value="0" />
		</pierceabilityLevels>
	</physics>
	<params>
		<param name="ammo_category" value="Regular" />
		<param name="lifetime" value="2" />
		<param name="showtime" value="0.0" />
		<param name="bulletType" value="2" /> <!-- Bullet Type 2 - Assault rifle bullet -->
		
		<param name="bullet_pierceability_modifier" value="0" />

		<param name="damage" value="4.5" />
		<param name="ai_vs_player_damage" value="1.6"/>
		<param name="damage_drop_per_meter" value="0" />
		<param name="damage_drop_min_distance" value="0" />
		<param name="damage_drop_min_damage" value="0" />

		<param name="point_blank_amount" value="1" />
		<param name="point_blank_distance" value="1" />
		<param name="point_blank_falloff_distance" value="1" />
		<param name="energyRateMul" value="1.0" />

		<param name="secondary_damage" value="1" />
		<param name="ignore_damage_falloff" value="0" />
	</params>
	
	<LaserBoldParams>
		<!--visual parameters for "stretching" the laser bolt mesh for a cool Star Wars feel-->
		<param name="gapSize" value="0.1" />
		<param name="maxLength" value="50" />
		<param name="radius" value="0.25" />
	</LaserBoldParams>
	
	<light>
		<param name="diffuse_srgb" value="165,99,90"/>
		<param name="diffuseMult" value="8" />
		<param name="attenuation_bulbsize" value="0.1"/>
		<param name="radius" value="10" />
		<param name="flare_Scale" value="0"/>
		<param name="flare_Name" value=""/>
	</light>	
	
	<trail>
		<param name="effect" value="Illfonic_Weapons_Ammo_10mm_rifle_laser.1st_Trail" />
		<param name="delayBeforeDestroy" value="0.5" />
	</trail>
	<trailMaxCharge>
		<param name="effect" value="Illfonic_Weapons_Ammo_10mm_rifle_laser.1st_Trail" />
		<param name="delayBeforeDestroy" value="0.5" />
		<param name="scale" value="2.0" />
	</trailMaxCharge>
	<trailOvercharged>
		<param name="effect" value="Illfonic_Weapons_Ammo_10mm_rifle_laser.1st_Trail" />
		<param name="delayBeforeDestroy" value="0.5" />
		<param name="scale" value="2.5" />
	</trailOvercharged>
</ammo>
